{
	"manifest_version": 3,
	"name": "Tabius 2",
	"short_name": "Tabius",
	"description": "An Automatic Tab Grouping Extension for Your Browser.",
	"version": "2.0",
	"author": "Faisal Ahmed",
	"background": {
		"service_worker": "assets/background.js",
		"type": "module"
	},
	"icons": {
		"128": "/icon.png"
	},
	"content_scripts": [],
	"action": {
		"default_title": "Current Tab Groups",
		"default_popup": "src/action.html"
	},
	"options_ui": {
		"page": "src/options/options.html",
		"open_in_tab": true
	},
	"permissions": ["tabs", "tabGroups", "storage", "unlimitedStorage"]
}
